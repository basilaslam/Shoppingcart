                          <div class="d-flex align-items-center"><a href="detail.html"><img class="cart-item-img" src="/product-images/{{this._id}}.jpg" alt="..."></a>
                            <div class="cart-title text-left"><a class="text-uppercase text-dark" href="detail.html"><strong>{{this.Name}}</strong></a><br><span class="text-muted text-sm">category: {{this.Category}}</span><br><span class="text-muted text-sm">Colour: {{this.Colour}}</span>
                            </div>
                          </div>
                        </div>
                        {{/each}}
                        <div class="col-2">{{this.Price}}</div>
                        <div class="col-2">
                          <div class="d-flex align-items-center">
                            <div class="btn btn-items btn-items-decrease">-</div>
                            <input class="form-control text-center input-items" type="text" value="{{this.quantity}}">
                            <div class="btn btn-items btn-items-increase">+</div>
                          </div>
                        </div>
                        <div class="col-2 text-center">$260.00</div>
                        <div class="col-1 text-center"><a class="cart-remove" href="#"> <i class="fa fa-times"></i></a></div>
                      </div>
                    </div>
                    <!-- Product-->
                    {{/each}}
                    
                  </div>
                </div>
              </div>
