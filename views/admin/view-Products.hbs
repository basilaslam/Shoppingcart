<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>
        </div>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">Catogery</th>
      <th scope="col">Description</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.Catogery}}</td>
      <td>{{this.Description}}</td>
      <td><img src="/product-images/{{this._id}}.jpg" style="width: 100px;height:100px;" alt="..."></td>
      <td>  <a class="btn btn-primary" href="/admin/edit-product/">Edit</a><a class="btn btn-danger m-2" onclick="return confirm('Are you sure you want to delete this item?');" href="/admin/delete-product/{{this._id}}">Delete</a></td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>